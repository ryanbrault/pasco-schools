body
  background-color: #fff
  font-family: Arial, sans-serif

body
  height: 100%
  width: 100%
  background-repeat: no-repeat
  background-position: top center
  line-height: 140%
  -webkit-font-smoothing: antialised
  padding-bottom: 300px
  margin: 0

p
  margin-bottom: 20px
  font-family: "Arial"
  font-size: 15px
  line-height: 130%
  color: #555

h2, h3
  margin-bottom: 5px
  line-height: 160%
  color: #555
  text-align: center

h2
  font-size: 28px
  font-family: "Arial"

h3
  font-size: 18px
  color: #06a

p a:link, p a:visited
  color: #06a
  border-bottom: 1px solid #06a
  text-decoration: none

strong
  font-weight: inherit
  background-color: #FFFECA

#intro
  text-align: left
  position: relative

  div
    width: 960px
    margin: 0 auto 20px auto

  img
    display: block
    border-bottom: 1px solid #eee

    &.mobile
      display: none

  h1
    font-size: 50px
    line-height 1
    font-weight: 800
    color: #fff
    margin: 0 auto
    line-height: 110%
    position: absolute
    top: 190px
    background-color: rgba(0,0,0,.3)
    width: 940px
    padding: 2px 10px

#main
  margin: 0 auto 20px auto
  width: 960px

#intro, #main
  p
    color: #555
    font-family: "Georgia"
    font-weight: 100
    line-height: 150%
    margin-bottom: 10px

aside
  text-align: center
  border-top: 1px solid #eee
  padding: 20px 0 10px 0
  height: 60px
  position: relative

  p
    font-size: 26px
    text-align: left
    position: absolute
    left: 332px
    margin-top: -7px
  div
    float: left
    margin-right: 50px


.fb-like, .fb-wrap
  width: 300px !important
  margin: 0

.fb-wrap
  width: 300px

.wrap
  width: 100%
  background-image: url(/images/texture.png)
  padding: 0 0 40px 0
  position: relative
  border-top: 1px solid #eee
  border-bottom: 1px solid #eaeaea
  margin: 20px 0 40px 0
  &:after
    content: ""
    position: absolute
    bottom: 0px
    border-bottom: 1px solid #fff
    width: 100%

#more
  width: 960px
  padding: 40px 0 40px 0
  margin: 0 auto
  height: 120px
  text-align: center

  & > h2
    margin-bottom: 40px

  a
    float: left
    width: 166px
    margin-right: 20px
    position: relative
    &:last-child
      margin-right: 0
    border-bottom: 0px none
    text-decoration: none
    innerShadow: rgba(0,0,0,0) 0 1px 5px
    background: rgba(0,0,0,.0)
    roundall: 10px
    padding: 5px
    -webkit-transition: .1s all

    &:hover
      background: rgba(0,0,0,.02)
      innerShadow: rgba(0,0,0,.5) 0 1px 5px

  img
    display: block
    width: 60px
    height: 60px
    margin: 5px auto 0 auto

  h3
    margin: 10px 0 0 0

#more 
  h2
    text-align: center
    display: block
    line-height: 120%
    margin: 0 auto 30px auto

.fb-wrap
  width: 300px
  margin: 0 auto

